@model HRAgencySystem.Web.Areas.Admin.InputModels.Reservation.ReservationInputModel
@{
    ViewBag.Title = "Create reservation";
}

<h2>Create Reservation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true) // don't show my exception from my properaties

    @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" });
    @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control", @type = "textarea" } });
    @Html.ValidationMessageFor(x => x.Description);
    <br />
    @Html.LabelFor(x => x.HallId, new { @class = "col-md-2 control-label" });
    @Html.DropDownListFor(x => x.HallId, (IEnumerable<SelectListItem>)ViewBag.Halls, new { @class = "form-control"});
    @Html.ValidationMessageFor(x => x.HallId);
    <br />
    @Html.LabelFor(x => x.Users, new { @class = "col-md-2 control-label" })
    @Html.ListBoxFor(x => Model.UserIds, (IEnumerable<SelectListItem>)ViewBag.Users, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Users);
    <br />
    @Html.LabelFor(x => x.StartDate, new { @class = "col-md-2 control-label" });
    @Html.EditorFor(x => x.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } });
    @Html.ValidationMessageFor(x => x.StartDate);
    <br />
    @Html.LabelFor(x => x.EndDate, new { @class = "col-md-2 control-label" });
    @Html.EditorFor(x => x.EndDate, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } });
    @Html.ValidationMessageFor(x => x.EndDate);
    <br />
    <input type="submit" name="submit" value="Reserv Now" class="btn btn-primary" />
}

@*Javascript errors for create form*@

@section scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

